generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id          String        @id @default(uuid())
  name        String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())

  Gang Gang[]
  @@map("student")
}


model Gang {
  id     String @id @default(uuid())
  gang   String
  student Student @relation(fields: [id_student], references: [id])
  id_student String
  @@map("gang")
}

